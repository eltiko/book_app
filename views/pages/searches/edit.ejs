<h2 class="view-title">Add <%= book.title %> to Your Library</h2>
<form action=`/update/${book.id}?_method=PUT` method="POST">
  <input type="text" name="title" value="<%- book.title %>" placeholder="<%- book.title %>">
  <input type="text" name="author" value="<%- book.author %>" placeholder="<%= book.author %>">
  <textarea name="description" placeholder="<%= book.description %>" cols="30"
    rows="10"><%- book.description %></textarea>
  <input type="text" name="isbn" value="<%- book.isbn %>" placeholder="ISBN">
  <input name="image_url" value="<%= book.image_url %>" alt="Book Cover" type="hidden">
  <input type="text" name="bookshelf" value="<%- book.bookshelf %>" placeholder="Enter a Bookshelf">
  <button type="submit">"Select This Book</button>
</form>